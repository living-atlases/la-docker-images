    echo "üî® Building from root..." && \
    mvn -s /build/settings.xml clean package -DskipTests ${MAVEN_PROFILES:+-P ${MAVEN_PROFILES}} -U && \
    find "target/" -maxdepth 1 -name "*.${EXTENSION}" -exec mv {} /build/artifact.${EXTENSION} \; || \
    find "target/" -maxdepth 1 -name "*.jar" -exec mv {} /build/artifact.${EXTENSION} \; ; \
